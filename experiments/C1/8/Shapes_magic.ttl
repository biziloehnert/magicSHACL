@prefix dbo: <http://dbpedia.org/ontology/>.
@prefix dbr: <http://dbpedia.org/resource/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix : <http://example.org/>.
        		
:TranslatedMovieShape_magic
	a sh:NodeShape ;
	sh:class dbo:Film .

:MovieShape_magic
	a sh:NodeShape ;
	sh:property[
		sh:node :TranslatedMovieShape_magic ;
		sh:path[
			sh:inversePath dbo:language ;
		];
	];
	sh:property[
		sh:node :ActorShape_magic ;
		sh:path dbo:starring ;
	];
	sh:property[
		sh:path dbo:director ;
		sh:node :DirectorShape_magic ;
	].

:LivingLanguageShape_magic
	a sh:NodeShape ;
	sh:node :TranslatedMovieShape_magic ;
	sh:path[
		sh:inversePath dbo:language ;
	].

:LocationShape_magic
	a sh:NodeShape ;
	sh:property[
		sh:path[
			sh:inversePath dbo:spokenIn ;
		];
		sh:node :LivingLanguageShape_magic ;
	];
	sh:property[
		sh:path[
			sh:inversePath dbo:birthPlace ;
		];
		sh:node :PersonShape_magic ;
	].

:DirectorShape_magic
	a sh:NodeShape ;
	sh:property[
		sh:path[
			sh:inversePath dbo:director ;	
		];
		sh:node :MovieShape_magic ;
	].

:ActorShape_magic
	a sh:NodeShape ;
	sh:property[
		sh:node :MovieShape_magic ;
		sh:path[
			sh:inversePath dbo:starring ;
		];
	].

:PersonShape_magic
	a sh:NodeShape ;
	sh:property[
		sh:path dbo:starring ;
		sh:node :ActorShape_magic ;
	];
	sh:property[
		sh:node :DirectorShape_magic ;
		sh:path dbo:director ;
	].	
				
:TranslatedMovieShape
	sh:targetClass dbo:Film ;
	sh:node :MovieShape ;
	sh:node :TranslatedMovieShape_magic ;
	sh:property [
		sh:path dbo:language ;
		sh:node :LivingLanguageShape ;
		sh:minCount 2 ;
	];
	a sh:NodeShape ;
.

:LivingLanguageShape
	sh:node :LivingLanguageShape_magic ;
	sh:property [
		sh:path dbo:spokenIn ;
		sh:minCount 1 ;
		sh:node :LocationShape ;
	];
	a sh:NodeShape ;
.

:LocationShape
	sh:node :LocationShape_magic ;
	sh:property [
		sh:path dbo:country ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;
.

:MovieShape
	sh:node :MovieShape_magic ;
	sh:property [
		sh:path dbo:director ;
		sh:node :DirectorShape ;
		sh:minCount 1 ;
	];
	sh:property [
		sh:path dbo:imdbId ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
	];
	sh:property [
		sh:path dbo:starring ;
		sh:node :ActorShape ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;
.

:ActorShape
	sh:node :PersonShape ;
	sh:node :ActorShape_magic ;
	sh:property [
		sh:path [
		sh:inversePath dbo:starring ;
	];
		sh:node :MovieShape ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;
.

:PersonShape
	sh:node :PersonShape_magic ;
	sh:property [
		sh:path dbo:birthPlace ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:node :LocationShape ;
	];
	a sh:NodeShape ;
.

:DirectorShape
	sh:node :PersonShape ;
	sh:node :DirectorShape_magic ;
	sh:property [
		sh:path [
		sh:inversePath dbo:director ;
	];
		sh:node :MovieShape ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;

.
