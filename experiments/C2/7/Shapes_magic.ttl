@prefix dbo: <http://dbpedia.org/ontology/>.
@prefix dbr: <http://dbpedia.org/resource/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix : <http://example.org/>.
        		
:MovieShape_magic
	a sh:NodeShape ;
	sh:node :ActorShape_magic ;
	sh:node :DirectorShape_magic ;
	sh:path dbo:starring ;
	sh:path dbo:director ;
	sh:targetClass dbo:Film ;.

	:DirectorShape_magic
	a sh:NodeShape ;
	sh:node :MovieShape_magic ;
	sh:inversePath dbo:director ;.

	:ActorShape_magic
	a sh:NodeShape ;
	sh:node :MovieShape_magic ;
	sh:inversePath dbo:starring ;.

	:PersonShape_magic
	a sh:NodeShape ;
	sh:node :ActorShape_magic ;
	sh:node :DirectorShape_magic ;
	sh:path dbo:starring ;
	sh:path dbo:director ;.

	:LocationShape_magic
	a sh:NodeShape ;
	sh:node :PersonShape_magic ;
	sh:inversePath dbo:birthPlace ;
	.	
				
:MovieShape
	sh:node :MovieShape_magic ;
	sh:property [
		sh:path dbo:director ;
		sh:node :DirectorShape ;
		sh:minCount 1 ;
	];
	sh:property [
		sh:path dbo:imdbId ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
	];
	sh:property [
		sh:path dbo:starring ;
		sh:node :ActorShape ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;
.

:ActorShape
	sh:node :PersonShape ;
	sh:node :ActorShape_magic ;
	sh:property [
		sh:path [
		sh:inversePath dbo:starring ;
	];
		sh:node :MovieShape ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;
.

:PersonShape
	sh:node :PersonShape_magic ;
	sh:property [
		sh:path dbo:birthPlace ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:node :LocationShape ;
	];
	a sh:NodeShape ;
.

:LocationShape
	sh:node :LocationShape_magic ;
	sh:property [
		sh:path dbo:country ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;
.

:DirectorShape
	sh:node :PersonShape ;
	sh:node :DirectorShape_magic ;
	sh:property [
		sh:path [
		sh:inversePath dbo:director ;
	];
		sh:node :MovieShape ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;

.