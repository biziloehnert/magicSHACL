@prefix dbo: <http://dbpedia.org/ontology/>.
@prefix dbr: <http://dbpedia.org/resource/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix : <http://example.org/>.
        		
:MusicianShape_magic
	a sh:NodeShape ;
	sh:targetClass dbo:Person ;.
 
:PersonShape_magic 
	a sh:NodeShape ;
	sh:property[
		sh:node :MusicianShape_magic ;
		sh:path[
			sh:inversePath dbo:instrument ;
		]
	].

:LocationShape_magic
	a sh:NodeShape ;
	sh:property[
		sh:node :PersonShape_magic ;
		sh:path[
			sh:inversePath dbo:birthPlace ;
		]
	].	
				
:MusicianShape
	sh:targetClass dbo:Person ;
	sh:node :PersonShape ;
	sh:node :MusicianShape_magic ;
	sh:property [
		sh:path dbo:instrument ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;
.

:PersonShape
	sh:node :PersonShape_magic ;
	sh:property [
		sh:path dbo:birthPlace ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:node :LocationShape ;
	];
	sh:property [
		sh:path dbo:birthDate ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
	];
	sh:property [
		sh:path dbo:birthName ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;
.

:LocationShape
	sh:node :LocationShape_magic ;
	sh:property [
		sh:path dbo:country ;
		sh:minCount 1 ;
	];
	sh:property [
		sh:path dbo:leaderTitle ;
		sh:minCount 1 ;
	];
	sh:property [
		sh:path dbo:populationDensity ;
		sh:minCount 1 ;
	];
	a sh:NodeShape ;

.